<div class="d-flex flex-column align-items-center justify-content-center mb-4">
  <%= image_tag("undraw_Hang_out_re_udl4.svg", alt: "coffe", class:"chat__image")%>
  <h1 class="mt-2 fs-3">Say something</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 card me-2 shadow-sm card__wrapper fs-5">
      <div class="card-body">
        <%= render 'messages/message' %>
      </div>
      <div class="card-footer bg-white">
        <%= form_for(@message, html: {role: "form"}, url: message_path) do |f|%>
          <div class="d-flex">
            <%= f.text_field :body, placeholder: "Text your message...", class:"form-control me-2", autocomplete: 'off'%>
            <%= f.button '<i class="fas fa-paper-plane"></i>'.html_safe, class:"btn btn-secondary"%>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-3 card shadow-sm card__wrapper">
      <div class="card-body">
        <div class="btn-group-vertical card__menu rounded">
          <a href="#" class="btn card__menu-btn">Home</a>
          <a href="#" class="btn card__menu-btn">Messages</a>
          <a href="#" class="btn card__menu-btn">Friends</a>
        </div>
      </div>
    </div>
  </div>
</div>